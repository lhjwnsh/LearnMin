<!-- <text>pages/scroll/scroll.wxml</text> -->
<!-- 1.水平滚动 scroll-x实现水平滚动  view是块级元素，是独占一行-->
<scroll-view class="container1" scroll-x>
  <view wx:for="{{10}}" wx:key="index" class="item1">{{item}}</view>
</scroll-view>

<!-- 2.实现垂直滚动 -->

<scroll-view class="container2" scroll-y>
  <view wx:for="{{10}}"
        wx:key="index"
        class="item2"
  >{{item}}</view>
</scroll-view>

<!-- bindscroll="handelScroll"监听滚动位置scrollTop -->
<scroll-view class="container2" scroll-y bindscroll="handelScroll">
  <view wx:for="{{10}}"
        wx:key="index"
        class="item2"
        
  >{{item}}</view>
</scroll-view>
